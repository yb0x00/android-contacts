<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        android:src="@drawable/icon"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/field"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="9"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintBottom_toTopOf="@+id/btnlayout"
        app:layout_constraintEnd_toEndOf="@+id/btnlayout"
        >

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/edittext_name"
            android:lineSpacingExtra="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textfield_bg"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/edittext_phone"
            android:lineSpacingExtra="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textfield_bg"/>

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/edittext_email"
            android:lineSpacingExtra="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textfield_bg"/>

        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:text="@string/button_more"
            android:drawableEnd="@drawable/icon_downarrow"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible">

            <EditText
                android:id="@+id/edit_birth"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="@string/edittext_birth"
                android:lineSpacingExtra="100dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textfield_bg"/>

            <EditText
                android:id="@+id/edit_gender"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="@string/edittext_gender"
                android:lineSpacingExtra="100dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textfield_bg"/>

            <EditText
                android:id="@+id/edit_note"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="@string/edittext_email"
                android:lineSpacingExtra="100dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/textfield_bg"/>

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FF0000"
            android:textColor="@color/black"
            android:text="@string/button_cancel"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FF0000"
            android:textColor="@color/black"
            android:text="@string/button_save"
            android:textSize="20sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
